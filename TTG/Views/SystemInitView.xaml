<UserControl x:Class="TTG.Views.SystemInitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TTG.Views"
             xmlns:vm="clr-namespace:TTG.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vm:SystemInitViewModel x:Key="VM" />
    </UserControl.Resources>
    <Grid DataContext="{StaticResource VM}">
        <TextBlock Text="{Binding InitIO}" HorizontalAlignment="Left" Height="40" Margin="100,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>
        <TextBlock Text="{Binding InitMot}" HorizontalAlignment="Left" Height="40" Margin="100,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>
        <TextBlock Text="{Binding InitCHR}" HorizontalAlignment="Left" Height="40" Margin="100,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>
    </Grid>
</UserControl>
