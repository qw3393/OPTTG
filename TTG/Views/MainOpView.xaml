<UserControl x:Class="TTG.Views.MainOpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TTG.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="120" Background="Aquamarine">
    <DockPanel LastChildFill="False" Margin="5,5,5,5">
        <Button DockPanel.Dock="Top" Margin="0,10,0,0" Content="MAIN" FontSize="18" Height="100" Command="{Binding Path=MainCommand}"/>
        <Button DockPanel.Dock="Top" Margin="0,10,0,0" Content="START" FontSize="18" Height="100" Command="{Binding Path=StartCommand}"/>
        <Button DockPanel.Dock="Top" Margin="0,10,0,0" Content="STOP" FontSize="18" Height="100" Command="{Binding Path=StopCommand}"/>
        <Button DockPanel.Dock="Top" Margin="0,10,0,0" Content="SETUP" FontSize="18" Height="100" Command="{Binding Path=SetupCommand}"/>
        <Button DockPanel.Dock="Top" Margin="0,10,0,0" Content="MANUAL" FontSize="18" Height="100" Command="{Binding Path=ManualCommand}"/>
        <Button DockPanel.Dock="Top" Margin="0,10,0,0" Content="EXIT" FontSize="18" Height="100" Command="{Binding Path=ExitCommand}"/>
    </DockPanel>
</UserControl>
